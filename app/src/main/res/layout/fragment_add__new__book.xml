<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#BAC4A3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Add_New_Book">

        <!-- Back button and title -->
        <ImageButton
            android:id="@+id/BtnLeftArrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/desc"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/left_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVListABook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:text="List a Book"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BtnLeftArrow" />

        <TextView
            android:id="@+id/TVTitleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Share your books with the community!"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/TVListABook"
            app:layout_constraintTop_toBottomOf="@+id/TVListABook" />

        <!-- Book Title -->
        <TextView
            android:id="@+id/TVBookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Book Title"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/TVTitleDescription"
            app:layout_constraintTop_toBottomOf="@+id/TVTitleDescription" />

        <EditText
            android:id="@+id/ETBookTitle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Enter Book Title"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVBookTitle"
            app:layout_constraintWidth_max="350dp" />

        <!-- Author -->
        <TextView
            android:id="@+id/TVAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Author"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ETBookTitle"
            app:layout_constraintTop_toBottomOf="@+id/ETBookTitle" />

        <EditText
            android:id="@+id/ETAuthor"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Enter Author Name"
            android:inputType="text"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVAuthor"
            app:layout_constraintWidth_max="350dp" />

        <!-- Genre -->
        <TextView
            android:id="@+id/TVGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Genre"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ETAuthor"
            app:layout_constraintTop_toBottomOf="@+id/ETAuthor" />

        <Spinner
            android:id="@+id/SPGenre"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_spinner"
            android:entries="@array/book_genre"
            app:layout_constraintEnd_toEndOf="@+id/ETAuthor"
            app:layout_constraintStart_toStartOf="@+id/TVGenre"
            app:layout_constraintTop_toBottomOf="@+id/TVGenre" />

        <!-- Condition -->
        <TextView
            android:id="@+id/TVCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Condition"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/SPGenre"
            app:layout_constraintTop_toBottomOf="@+id/SPGenre" />

        <Spinner
            android:id="@+id/SPCondition"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_spinner"
            android:entries="@array/condition_type"
            app:layout_constraintEnd_toEndOf="@+id/SPGenre"
            app:layout_constraintStart_toStartOf="@+id/TVCondition"
            app:layout_constraintTop_toBottomOf="@+id/TVCondition" />

        <!-- Listing Type -->
        <TextView
            android:id="@+id/TVListingType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Listing Type"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/SPCondition"
            app:layout_constraintTop_toBottomOf="@+id/SPCondition" />

        <RadioGroup
            android:id="@+id/radioGroupListing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TVListingType"
            app:layout_constraintWidth_max="350dp">

            <include
                android:id="@+id/cardExchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                layout="@layout/radio_card" />

            <include
                android:id="@+id/cardDonate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/radio_card" />

        </RadioGroup>

        <!-- Description -->
        <TextView
            android:id="@+id/TVDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Description"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupListing" />

        <EditText
            android:id="@+id/ETDescription"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start|top"
            android:hint="Describe the book's content and condition"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVDescription"
            app:layout_constraintWidth_max="350dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/BtnCancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins"
            android:text="Cancel"
            android:textColor="#45543D"
            app:cornerRadius="16dp"
            app:layout_constraintStart_toStartOf="@+id/ETBookTitle"
            app:layout_constraintTop_toBottomOf="@+id/ETDescription"
            app:strokeColor="#45543D"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/BtnListBook"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#7C8A67"
            android:fontFamily="@font/roboto_medium"
            android:text="+  Add New Book"
            android:textColor="#FFFFFF"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="@+id/ETBookTitle"
            app:layout_constraintTop_toBottomOf="@+id/ETDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>